<?xml version="1.0" encoding="utf-8"?>
<ScrollView
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent">

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:orientation="vertical">

		<fragment
			android:id="@+id/user"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:name="com.sunfusheng.dagger2.kotlin.mvp_without_dagger2.UserFragment"/>

		<fragment
			android:id="@+id/repo"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:name="com.sunfusheng.dagger2.kotlin.mvp_with_dagger2.RepoFragment"/>
	</LinearLayout>

</ScrollView>